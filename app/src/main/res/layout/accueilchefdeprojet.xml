<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accueil_chef_de_projet"
        android:id="@+id/textViewcp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#f435ae" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GESTION OPERATION"
        android:id="@+id/buttonGO"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonGO"
        android:background="#6efbfb"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textViewcp"
        android:layout_alignLeft="@+id/buttonGA"
        android:layout_alignStart="@+id/buttonGA" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GESTION ACTIVITE"
        android:id="@+id/buttonGA"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonGA"
        android:background="#6efbfb"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/buttonGO"
        android:layout_alignLeft="@+id/buttonGT"
        android:layout_alignStart="@+id/buttonGT" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GESTIONTACHE"
        android:id="@+id/buttonGT"
        android:onClick="buttonGT"
        android:background="#6efbfb"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Accueil employe"
        android:id="@+id/buttonVL2"
        android:layout_gravity="center_horizontal"
        android:background="#dafb419e"
        android:onClick="buttonVL2"
        android:layout_below="@+id/buttonGT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SE DECONNECTER"
        android:id="@+id/buttonD2"
        android:layout_gravity="center_horizontal"
        android:background="#9a5e9c"
        android:onClick="buttonD2"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/buttonVL2"
        android:layout_alignLeft="@+id/buttonGT"
        android:layout_alignStart="@+id/buttonGT" />




</RelativeLayout>