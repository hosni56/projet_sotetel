<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom PROJET"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID PROJET"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="montant PROJET"
        android:id="@+id/textView7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE DEBUT PROJET"
        android:id="@+id/textView8" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="dateOnClick" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE FIN PROJET"
        android:id="@+id/textView9" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="dateOnClick2" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESPONSABLE PROJET"
        android:id="@+id/textView10" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"

        android:layout_below="@+id/country"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="saveP"
            android:id="@+id/button"
            android:onClick="busaveP" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deleteP"
            android:id="@+id/button2"
            android:onClick="budeleteP" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="updateP"
            android:id="@+id/button3"
            android:onClick="buupdateP" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:id="@+id/listView" />

</LinearLayout>